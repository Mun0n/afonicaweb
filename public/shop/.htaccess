# Enable rewrite engine
RewriteEngine On

# Allow access to all files
Options +FollowSymLinks
Options -MultiViews

# Set default directory index
DirectoryIndex index.php Install_PrestaShop.html

# Allow execution of PHP files
<FilesMatch "\.php$">
    Require all granted
</FilesMatch>

# Allow access to HTML files
<FilesMatch "\.html$">
    Require all granted
</FilesMatch>

# Allow access to the directory
<Directory "/shop">
    Options +Indexes
    AllowOverride All
    Require all granted
</Directory>

# Handle Install_PrestaShop.html as PHP
<Files "Install_PrestaShop.html">
    AddType application/x-httpd-php .html
    SetHandler application/x-httpd-php
</Files> 